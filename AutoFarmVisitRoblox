--// ULTRA FAST SAFE AUTO FARM (CLIENT ONLY)
local TeleportService = game:GetService("TeleportService")
local Players = game:GetService("Players")
local UIS = game:GetService("UserInputService")

local lp = Players.LocalPlayer
local GAME_ID = 90746724868686

local visits = 0
local running = true
local teleporting = false
local firstMoveDone = false

print("üöÄ ULTRA FAST AUTO FARM –ó–ê–ü–£–©–ï–ù")

-- –ñ–¥—ë–º –ø–µ—Ä—Å–æ–Ω–∞–∂–∞
local function waitChar()
	if lp.Character and lp.Character:FindFirstChild("Humanoid") then
		return lp.Character
	end
	return lp.CharacterAdded:Wait()
end

-- –û–¥–∏–Ω —Ä–∞–∑ –ø—Ä—ã–≥–∞–µ–º –∏ –¥–≤–∏–≥–∞–µ–º—Å—è –Ω–µ–º–Ω–æ–≥–æ
local function firstQuickMove()
	if firstMoveDone then return end
	local char = waitChar()
	local hum = char:FindFirstChild("Humanoid")
	if not hum then return end

	hum:Move(Vector3.new(1,0,0), false)
	task.wait(0.05)
	hum:Move(Vector3.new(-1,0,0), false)
	task.wait(0.05)
	hum.Jump = true

	firstMoveDone = true
end

-- –ë—ã—Å—Ç—Ä—ã–π —Ç–µ–ª–µ–ø–æ—Ä—Ç
local function ultraTeleport()
	if teleporting then return end
	teleporting = true

	visits += 1
	if not firstMoveDone then
		firstQuickMove()
	end

	task.wait(0.05) -- –º–∏–Ω–∏–º–∞–ª—å–Ω–∞—è –ø–∞—É–∑–∞ –¥–ª—è –±–µ–∑–æ–ø–∞—Å–Ω–æ—Å—Ç–∏
	TeleportService:Teleport(GAME_ID, lp)
end

-- –û—Å–Ω–æ–≤–Ω–æ–π —Ü–∏–∫–ª
task.spawn(function()
	task.wait(1)

	while running and visits < 10000 do
		waitChar()
		ultraTeleport()

		-- –õ–æ–≥ –∫–∞–∂–¥—ã–µ 5 –≤–∏–∑–∏—Ç–æ–≤
		if visits % 5 == 0 then
			print("‚ö° –í–ò–ó–ò–¢–û–í:", visits)
			print("üéØ JOB:", game.JobId)
		end

		-- –ú–∏–Ω–∏–º–∞–ª—å–Ω–∞—è –ø–∞—É–∑–∞, —á—Ç–æ–±—ã —Å–∫—Ä–∏–ø—Ç –Ω–µ –∫—Ä–∞—à–Ω—É–ª—Å—è
		task.wait(0.1)
		teleporting = false
	end
end)

-- –ì–æ—Ä—è—á–∏–µ –∫–ª–∞–≤–∏—à–∏
UIS.InputBegan:Connect(function(input, gp)
	if gp then return end

	if input.KeyCode == Enum.KeyCode.P then
		running = false
		print("üõë –û–°–¢–ê–ù–û–í–õ–ï–ù–û")
	elseif input.KeyCode == Enum.KeyCode.R then
		visits = 0
		print("üîÑ –°–ë–†–û–°")
	end
end)

print("‚úÖ –ì–û–¢–û–í–û (ULTRA FAST CLIENT SAFE)")
